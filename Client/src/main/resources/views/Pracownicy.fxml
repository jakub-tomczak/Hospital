                                                     resizable="false"/>
                                        <TableColumn fx:id="aktualizujNurse" minWidth="100.0" prefWidth="100.0"
                                                     resizable="false"/>
                                    </columns>
                                </TableView>
                            </children>
                            <columnConstraints>
                                <ColumnConstraints/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints/>
                            </rowConstraints>
                        </GridPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
