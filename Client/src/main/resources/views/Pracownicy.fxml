    <rowConstraints>
        <RowConstraints minHeight="200" prefHeight="500" vgrow="ALWAYS"/>
    </rowConstraints>
    <children>
        <VBox alignment="CENTER" depthTest="DISABLE" prefHeight="200.0" prefWidth="100.0" styleClass="vbox"
              GridPane.columnIndex="1">
