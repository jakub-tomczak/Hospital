--edycja lekarzy i pielegniarek

create or replace procedure aktualizujLekarza
    (imie_in in varchar2,
    nazwisko_in in varchar2,
    stanowisko_in in number,
    pensja_in in number,
    specjalizacja_in in varchar2,
    stopiennaukowy_in in varchar2,
    oddzialy_id_in in number,
    pracownik_id_in in number)
is
begin 
    --update pracownika
        update sz_pracownicy
        set 
        imie = imie_in,
        nazwisko = nazwisko_in,
        stanowisko = stanowisko_in,
        pensja = pensja_in,
        oddzialy_id = oddzialy_id_in
        where
        pracownikid = pracownik_id_in;
    --update lekarza
        update sz_lekarze
        set
        specjalizacja = specjalizacja_in,
        stopiennaukowy = stopiennaukowy_in
        where pracownikid = pracownik_id_in;
end aktualizujLekarza;

