create or replace procedure usunPracownika
    (id in number, 
    stanowisko in number)
is
begin 
    if(stanowisko = 1)
    then
        --usun lekarza
        delete from sz_lekarze where pracownikid = id;
    elsif stanowisko = 2 then
        --usun pielegniarke
        delete from sz_pielegniarki where pracownikid = id;
    else
          raise_application_error(-20101, 'Pracownik do usuniecia ma niepoprawne stanowisko!');
    end if;

    --usun pracownika
    delete from sz_pracownicy where pracownikid = id;
end usunPracownika;